{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "vue/setup-compiler-macros": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "eslint:recommended",
    "@vue/typescript/recommended",
    // Add under other rules
    "@vue/prettier",
    "@vue/prettier/@typescript-eslint"
  ],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "globals": {
    "$": true,
    "Glide": true,
    "Swiper": true,
    "route": true,
    "gsap": true,
    "WirisPlugin": true,
    "__APP_INFO__": true,
    "Vue3Lottie": true
  },
  "plugins": [],
  "rules": {
    "vue/multi-word-component-names": "off"
  }
}
